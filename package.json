{
  "name": "mrgx",
  "version": "1.3.0",
  "description": "a simple tool to manage multi-repo gits action",
  "bin": {
    "mrgx": "./bin/mrgx.js"
  },
  "scripts": {
    "start": "node bin/mrgx.js cd multi-repo-git",
    "test": "jest --runInBand --detectOpenHandles",
    "changelog": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brizer/multi-repo-git.git"
  },
  "keywords": [
    "multi",
    "multi-repo",
    "git"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node scripts/verifyCommitMsg.js"
    }
  },
  "author": "brizer <brizer@163.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brizer/multi-repo-git/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/brizer/multi-repo-git#readme",
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.12",
    "husky": "^1.3.1",
    "jest": "^24.6.0"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "bluebird": "^3.5.4",
    "commander": "^2.19.0",
    "findup-sync": "^3.0.0",
    "fs-extra": "^7.0.1",
    "loop": "^3.1.3",
    "semver": "^6.0.0",
    "sym-lnk": "^1.0.0"
  }
}
